---
import SidebarIcons from "./react/SidebarIcons/SidebarIcons.tsx";
import ColorPicker from "./react/ColorPicker/ColorPicker.tsx";
---

<aside class="sidebar">
  <SidebarIcons client:load />
  <ColorPicker client:visible />
</aside>

<style>
  .sidebar {
    background-color: var(--bgPanel);
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .sidebar__icons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-auto-rows: min-content;
    min-width: min-content;
    gap: 3px;
  }
</style>
