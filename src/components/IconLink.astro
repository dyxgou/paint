---
import { Image } from "astro:assets";

interface Props {
  name: string;
  href: string;
  icon: string;
  newPage?: boolean;
}

const { name, href, icon, newPage } = Astro.props;
const target = newPage ? "_blanck" : "_self";
---

<a class="icon" target={target} href={href}>
  <Image
    decoding="async"
    loading="eager"
    width="100"
    height="100"
    src={icon}
    alt={name}
  />
  <span class="icon__name">{name}</span>
</a>

<style>
  .icon {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 15px;
    border-radius: 4px;
    color: white;
    border: 1px solid transparent;
  }

  .icon__name {
    font-size: 30px;
  }

  .icon:hover {
    border: #01224f 1px solid;
    background-color: rgba(0, 61, 145, 0.2);
  }
</style>
